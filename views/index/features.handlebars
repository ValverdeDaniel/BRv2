//carousel javascript section
var PslideIndex = 1;
PshowSlides(PslideIndex);

function PplusSlides(Pn) {
  PshowSlides(PslideIndex += Pn);
}

function PcurrentSlide(Pn) {
  PshowSlides(PslideIndex = Pn);
}

function PshowSlides(Pn) {
  var Pi;
  var Pslides = document.getElementsByClassName("PmySlides");
  var Pdots = document.getElementsByClassName("Pdot");
  if (Pn > Pslides.length) {PslideIndex = 1}    
  if (Pn < 1) {PslideIndex = Pslides.length}
  for (Pi = 0; Pi < Pslides.length; Pi++) {
      Pslides[Pi].style.display = "none";  
  }
  for (Pi = 0; Pi < Pdots.length; Pi++) {
      Pdots[Pi].className = Pdots[Pi].className.replace(" activeBR", "");
  }
  Pslides[PslideIndex-1].style.display = "block";  
  Pdots[PslideIndex-1].className += " activeBR";
}


