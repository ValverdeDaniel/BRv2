<div class="proposal_wrapper">
  <div class="row">
    <div class="col"> 
      <div class="row proposal_topbar">
        <div class="col m2 s12">
          <h1 class="proposal_title">Received Proposals</h1>
        </div>
        <div class="col m8 s12" style="display: grid">
          <ul class="br_tabs tabs hide-on-small-only "> 
            <li class="tab col m2 s12"><a class="toggleRowClick active" href="#all">All</a></li>
            <li class="tab col m3 s12"><a class="toggleRowClick" href="#accepted">Accepted</a></li>
            <li class="tab col m2 s12"><a class="toggleRowClick" href="#declined">Declined</a></li>
            <li class="tab col m2 s12"><a href="/proposals/my">Sent</a></li>
          </ul>
          <!-- Dropdown Trigger -->
          <div class="hide-on-med-and-up" style="display: grid;">
            <a class='dropdown-trigger btn' href='#' data-target='dropdown1'>Filter: <span id="mobileFilter">All</span></a>

            <!-- Dropdown Structure -->
            <ul id='dropdown1' class='dropdown-content'>
              <li><a class="toggleRowClick active" id="mobileAll" href="#all">All</a></li>
              <li><a class="toggleRowClick" id="mobileAccepted" href="#accepted">Accepted</a></li>
              <li><a class="toggleRowClick" id="mobileDeclined" href="#declined">Declined</a></li>
            </ul>
          </div>
        </div>  
        <div class="col m2 s12" style="display: grid">
          <div class="proposal_title-wrapper">
            <a class="btn primary pull-right-md" style="display: grid;" href="/proposals/add">+ New Proposal</a>
          </div>
        </div>
      </div> 
      <div class="row">
        <div class="col m12 s12 gridonmobile" style="padding-bottom: 10px;">
          <div id='card' class="card" style="height: fit-content;margin: 0px !important">
            <select id="filterproposals" multiple class="select1 browser-default">
              {{#each tags}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>
        </div> 
      </div> 
      <div class="row">
        <div class="col s12 hide-on-small-only">
          <div class="">
            <div class="proposal_filter">
              {{!-- testing created addon --}}
              {{!-- <div class="col s5">
              <p>created</p>
            </div>    --}}
              <div class="col m1 s12">
              </div>
              <div class="col m1 s12">
                <p>Sender</p>
              </div>
              <div class="col m2 s12">
                <p>Created Date</p>
              </div>
              <div class="col m2 s12">
                <p>Last Comment</p>
              </div>
              <div class="col m1 s12">
                <p>Status</p>
              </div>
              <div class="col m1 s12">
                <p>Amount</p>
              </div>
              <div class="col m2 s12">
                Tags
              </div>
              <div class="col m2 s12">
                Actions
              </div>
            </div>
          </div>
        </div>
      </div>
      <span id="proposalTable">
        <div class="proposal-row row" id="accepted">
          {{#each proposals}}
            {{#ifEquals votes.[0].voteBody "Accept"}}
              <div class="col s12">
                <div class="">
                  <div class="proposal_item">
                    {{!-- created date for sorting check --}}
                    {{!-- <div class="col s5">  
                  <td>{{formatDate date 'MMMM Do YYYY'}}</td>
                </div>  --}}
                    <div class="col m1 s12">
                      {{#if url}}
                      <img src="{{url}}media/?size=l" class="proposal_image" width="100%" alt="" />
                      {{else}}
                      <img src="{{user.image}}" width="100%" class="proposal_image">
                      {{/if}}
                    </div>
                    <div class="col m1 s12">
                      <p class="proposal-label hide-on-med-and-up">Sender</p>
                      <p>{{user.firstName}} {{user.lastName}}</p>
                    </div>
                    <div class="col m2 s12">
                      <p class="proposal-label hide-on-med-and-up">Created Date</p>
                      <p>
                        {{formatDate date 'MMMM Do YYYY, h:mm'}}
                      </p>
                    </div>
                    <div class="col m2 s12">
                      <p class="proposal-label hide-on-med-and-up">Last Comment</p>
                      <p>
                        {{#if comments.[0].commentDate}}
                        {{formatDate comments.[0].commentDate 'MMMM Do YYYY, h:mm'}}
                        {{/if}}
                      </p>
                    </div>
                    <div class="col m1 s12">
                      <p class="proposal-label hide-on-med-and-up">Status</p>
                      <p>{{votes.[0].voteBody}}</p>
                    </div>
                    <div class="col m1 s12">
                      <p class="proposal-label hide-on-med-and-up">Amount</p>
                      <p class="proposal-text">{{compensation}}</p>
                    </div>
                    <div class="col m2 s12">
                      <p class="proposal-label hide-on-med-and-up">Tags</p>
                      <p class="proposal-text">
                        {{#each tag}}
                        <div class="chip">
                          {{this.text}}
                        </div>
                        {{/each}}
                      </p>
                    </div>
                    <div class="col m2 s12">
                      <div class="row">
                        <div class="col m-auto s4">
                          <a class="proposal-btn btn grey" href="/proposals/show/{{id}}"><i class="fa fa-eye"></i></a>
                        </div>
                        {{!-- <div class="col m-auto s4">
                        <form action="/proposals/{{id}}?_method=DELETE" method="post" id="delete-form">
                          <input type="hidden" name="_method" value="DELETE">
                          <button type="submit" class="proposal-btn btn red"><i class="fa fa-remove"></i></button>
                        </form>
                      </div> --}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {{/ifEquals}} 
          {{/each }} 
        </div> 
        <div class="proposal-row row" id="declined">
          {{#each proposals}}
            {{#ifEquals votes.[0].voteBody "Decline"}}
              <div class="col s12">
