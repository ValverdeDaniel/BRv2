                          <input type="hidden" name="_method" value="DELETE">
                          <button type="submit" class="proposal-btn btn red"><i class="fa fa-remove"></i></button>
                        </form>
                      </div> --}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {{/ifEquals}} 
          {{/each }} 
        </div> 
        <div class="proposal-row active row" id="all">
          {{#each proposals}} 
            <div class="col s12">
              <div class="">
                <div class="proposal_item">
                  {{!-- created date for sorting check --}}
                  {{!-- <div class="col s5">  
                <td>{{formatDate date 'MMMM Do YYYY'}}</td>
