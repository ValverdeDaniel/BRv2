        <div class="card horizontal">
          <div class="card-stacked">
            <div class="card-content">
              <span class="card-title">Show Us What You Got</span>

              {{#ifEqualsElse offer.welcomeMessage ""}}

              {{else}}
              <p>{{offer.welcomeMessage}}</p>
              <br>
              {{/ifEqualsElse}}
